async function startProgram() {
 	setMainLed({ r: 0, g: 0, b: 200 });
	await speak("This is a test and only a test");
	setSpeed(100);
	await delay(1.55);
	setSpeed(0);
	await roll((getHeading() + 360), 100, 2);
	setSpeed(100);
	await delay(1.55);
	setSpeed(0);
	setMainLed({ r: 0, g: 255, b: 0});
}
